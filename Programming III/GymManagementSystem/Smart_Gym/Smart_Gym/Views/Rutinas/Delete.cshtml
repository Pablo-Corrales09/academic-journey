@using Microsoft.AspNetCore.Identity
@model Smart_Gym.Models.Rutina
@inject SignInManager<Usuario> SignInManager

@{
    ViewData["Title"] = "Delete";
    var rolesPermitidos = new[] { "Administrador", "Entrenador" }; //Crea un arreglo con los roles permitidos para editar y eliminar rutinas.
    var tieneRol = rolesPermitidos.Any(rol => User.IsInRole(rol)); //Verifica si el usuario tiene alguno de los roles permitidos.
}


@if (SignInManager.IsSignedIn(User)) //Esta opción solo se muestra si el usuario está logueado
{
    if (tieneRol)
    {

<h1>Eliminar rutina</h1>

<h3>¿Esta seguro que quiere eliminar esta rutina?</h3>
<div>
    <h4>Rutina</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreRutina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreRutina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nivel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nivel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionRutina)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescripcionRutina)
        </dd>
    </dl>

            <form asp-action="Delete"
                  onsubmit="return confirm('Eliminar rutina\n\n- Esta acción no se puede deshacer.\n- Al eliminar la rutina, se afectarán las reservas relacionadas.\n\n¿Estás seguro de que deseas eliminar esta rutina?');">
                <input type="hidden" asp-for="IdRutina" />

                <input type="submit" value="Delete" class="btn btn-danger" style="border-radius: 14px;" />

                <a class="btn btn-secondary text-white" style="border-radius: 14px;" asp-action="Index">
                    <i class="bi bi-arrow-left-circle mx-2"></i> Volver
                </a>
            </form>
</div>
}
    else
    {
        <div class="d-flex flex-column justify-content-center align-items-center vh-100">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-emoji-frown-fill fs-1 mx-2"></i>
                <h1 class="m-0">Acceso denegado</h1>
            </div>

            <a class="btn btn-secondary text-white" style="border-radius: 14px;" asp-action="Index">
                <i class="bi bi-arrow-left-circle mx-2"></i> Volver
            </a>
        </div>

    }

}
