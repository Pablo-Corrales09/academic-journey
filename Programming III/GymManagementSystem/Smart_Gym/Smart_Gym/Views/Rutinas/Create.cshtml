@using Microsoft.AspNetCore.Identity
@model Smart_Gym.Models.Rutina
@inject SignInManager<Usuario> SignInManager


@{
    ViewData["Title"] = "Create";
    var rolesPermitidos = new[] { "Administrador", "Entrenador" }; //Crea un arreglo con los roles permitidos para editar y eliminar rutinas.
    var tieneRol = rolesPermitidos.Any(rol => User.IsInRole(rol)); //Verifica si el usuario tiene alguno de los roles permitidos.
}
@if (SignInManager.IsSignedIn(User)) //Esta opción solo se muestra si el usuario está logueado y tiene el rol de Administrador o Entrenador.
{
    if (tieneRol)
    {

<div class="d-flex justify-content-center align-items-center" style="height: 90vh;">
    <div class="row border border-secondary p-3 w-40" style="border-radius:14px;">
     
        <h1 class="my-3 text-center">Fábrica de rutinas</h1>
        <hr />

    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreRutina" class="control-label">Nombre de la rutina</label>
                <input asp-for="NombreRutina" class="form-control my-2" />
                <span asp-validation-for="NombreRutina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nivel" class="control-label">Nivel de entrenamiento</label>
                <input asp-for="Nivel" class="form-control my-2" />
                <span asp-validation-for="Nivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionRutina" class="control-label">Descripción para la rutina</label>
                <textarea asp-for="DescripcionRutina" class="form-control my-2" rows="6"></textarea>                
                <span asp-validation-for="DescripcionRutina" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between align-items-center mt-3">
                <input type="submit" value="Agregar rutina" class="btn btn-primary" style="border-radius: 14px;" />
                <a class="btn btn-secondary text-white" style="border-radius: 14px;" asp-action="Index">
                <i class="bi bi-arrow-left-circle mx-2"></i> Volver
                </a>
            </div>
        </form>                  
    </div>



    </div>
</div>
    }
    else
    {
        <div class="d-flex flex-column justify-content-center align-items-center vh-100">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-emoji-frown-fill fs-1 mx-2"></i>
                <h1 class="m-0">Acceso denegado</h1>
            </div>
                <a class="btn btn-secondary text-white" style="border-radius: 14px;" asp-action="Index">
                    <i class="bi bi-arrow-left-circle mx-2"></i> Volver
                </a>
                
        </div>

    }
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
