@model Smart_Gym.Models.UsuarioClase

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center" style="font-size:30px; margin-top:35px;">Reserva de clases</h1>

<div class="col-md-8 mt-5 row border border-secondary p-3 mx-auto"
style="border-radius:14px; height: 50vh;">

    <h2 style="font-size:25px;  margin-top:20px;">Crear una reserva</h2>
<hr />
<div class="row">
    <div style="width: 100%;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label asp-for="IdUsuario" class="control-label my-2">Nombre del cliente</label>
               @*  Crea una lista desplegable que se enlaza con el IdUsuario y por medio del ViewBag se obtiene el nombre completo
                   del usuario, además se ingresa una opción por defecto "Seleccione..." que no representa valores, por lo que el usuario debe seleccionar una opción para poder crear una reserva. *@
                @Html.DropDownListFor(model => model.IdUsuario, (SelectList)ViewBag.IdUsuario, "--- Seleccione un usuario ---", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="IdClaseRutina" class="control-label my-2">Rutina</label>
                @Html.DropDownListFor(model => model.IdClaseRutina, (SelectList)ViewBag.IdClaseRutina, "--- Seleccione una rutina ---", new { @class = "form-control" })
            </div>

            <div class="d-flex justify-content-between my-4">
                <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" style="border-radius:14px;" />
                </div>

                <div>
                    <a asp-action="Index" class="btn btn-secondary" style="border-radius:14px;">Volver</a>
                </div>
             </div>

        </form>
    </div>
</div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
