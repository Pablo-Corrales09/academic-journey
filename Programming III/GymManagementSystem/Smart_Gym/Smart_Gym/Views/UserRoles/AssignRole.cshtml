@model Smart_Gym.Models.UserRolesViewModel
@{
    ViewData["Title"] = "Asignar Rol a Usuario";
}

<h1>Asignar Rol a Usuario</h1>

<form asp-action="AssignRole" method="post">
    @Html.AntiForgeryToken()

    <input asp-for="UserId" type="hidden"/>
    <input asp-for="UserName" type="hidden" />

    <div class="form-group">
        <label asp-for="RoleName">Seleccionar Rol</label>
        <select asp-for="RoleName" class="form-control">
            <option value="">Seleccione un rol</option>
            @foreach (var role in Model.Roles)
            {
                <option value="@role">@role</option>
            }
            </select>
        <span asp-validation-for="RoleName" class="text-danger"></span>

    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary mt-3">Asignar Rol</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
