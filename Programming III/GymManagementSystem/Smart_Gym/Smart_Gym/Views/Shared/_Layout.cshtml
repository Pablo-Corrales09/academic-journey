@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager

@{
    var rolesPermitidos = new[] { "Administrador", "Entrenador" };
    var tieneRol = rolesPermitidos.Any(rol => User.IsInRole(rol));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart_Gym</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Smart_Gym.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" /> @* Permite usar la librería de íconos de Bootstrap *@


</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="mx-5">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse mx-3"></i>Smart Gym</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center mx-4">
                    <ul class="navbar-nav flex-grow-1"> 
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info border-0 mx-1 text-dark" 
                            style="border-radius:14px;" asp-area="" asp-controller="Rutinas" asp-action="Index">Rutinas</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info border-0 mx-1 text-dark" 
                            style="border-radius:14px;" asp-area="" asp-controller="Clases" asp-action="Index">Clases</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info border-0 mx-1 text-dark" 
                            style="border-radius:14px;" asp-area="" asp-controller="UsuarioClases" asp-action="Index">Reservas</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info border-0 mx-1 text-dark" 
                            style="border-radius:14px;" asp-area="" asp-controller="Ejercicios" asp-action="Index">Ejercicios</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-info border-0 mx-1 text-dark" 
                            style="border-radius:14px;" asp-area="" asp-controller="Maquinas" asp-action="Index">Equipos</a>
                        </li>                    
                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (tieneRol)
                            {
                                <li class="nav-item">
                                    <a class="nav-link btn btn-outline-info border-0 mx-1 text-dark" 
                                    style="border-radius:14px;" asp-area="" asp-controller="Admin" asp-action="Index">Administración</a>
                                </li>
                            }
                        }

                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Smart_Gym - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
