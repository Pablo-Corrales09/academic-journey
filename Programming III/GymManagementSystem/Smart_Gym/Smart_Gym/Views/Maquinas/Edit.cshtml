@model Smart_Gym.Models.Maquina

@{
    ViewData["Title"] = "Edit";
}

<h1 class="my-4" style="font-size:25px;">Editar equipo de entrenamiento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMaquina" />
            <div class="form-group">
                <label asp-for="NombreMaquina" class="control-label my-2">Nombre</label>
                <input asp-for="NombreMaquina" class="form-control " />
                <span asp-validation-for="NombreMaquina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionMaquina" class="control-label my-2">Descripción</label>
                <input asp-for="DescripcionMaquina" class="form-control" />
                <span asp-validation-for="DescripcionMaquina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenMaquina" class="control-label my-2">Dirección de imagen</label>
                <input asp-for="ImagenMaquina" class="form-control" />
                <span asp-validation-for="ImagenMaquina" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between my-3">
                <input type="submit" value="Guardar cambios" 
                    class="btn btn-primary" style="border-radius:14px;" />
                <a asp-action="Index" class="btn btn-secondary"
                style="border-radius:14px;">
                <i class="bi bi-arrow-left-circle mx-2"></i> Volver</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
