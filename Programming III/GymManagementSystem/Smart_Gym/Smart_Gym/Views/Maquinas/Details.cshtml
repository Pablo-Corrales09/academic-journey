@model Smart_Gym.Models.Maquina

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Maquina</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreMaquina)
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DescripcionMaquina)
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImagenMaquina" style="max-width: 700px; max-height: 700px;" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdMaquina">Edit</a> |
    @if (ViewBag.regresar == "Rutinas")
    {
        <a class="btn btn-secondary" style="border-radius: 14px"
           asp-controller="Rutinas" asp-action="Details" asp-route-id="@ViewBag.IdRutina">
            @* El viewBag permite ubicar el id de la rutina *@
            <i class="bi bi-arrow-left-circle me-2"></i>Volver a Rutinas
        </a>
    }
    else
    {
        <a class="btn btn-secondary" style="border-radius: 14px" asp-controller="Maquinas" asp-action="Index">
            <i class="bi bi-arrow-left-circle me-2"></i>Volver a Máquinas
        </a>
    }
</div>
