@using Microsoft.AspNetCore.Identity
@model Smart_Gym.Models.Maquina
@inject SignInManager<Usuario> SignInManager

@{
    ViewData["Title"] = "Delete";
    var rolesPermitidos = new[] { "Administrador", "Entrenador" }; //Crea un arreglo con los roles permitidos para editar y eliminar rutinas.
    var tieneRol = rolesPermitidos.Any(rol => User.IsInRole(rol)); //Verifica si el usuario tiene alguno de los roles permitidos.
}


@if (SignInManager.IsSignedIn(User)) //Esta opción solo se muestra si el usuario está logueado
{
    if (tieneRol)
    {

<div class="d-flex justify-content-between align-items-center">
    <h1 class="my-4" style="font-size:25px;">Eliminar equipo de entrenamiento</h1>

    <form asp-action="Delete"
                onsubmit="return confirm('Eliminar equipo de entrenamiento\n\n- Esta acción no se puede deshacer.\n- Al eliminar el equipo, se afectarán los ejercicios relacionados.\n\n¿Estás seguro de que deseas eliminar este equipo?');">
        <input type="hidden" asp-for="IdMaquina" />
        <input type="submit" value="Borrar"
               class="btn btn-danger" style="border-radius:14px;" />
        <a asp-action="Index"
           class="btn btn-secondary" style="border-radius:14px;">
            <i class="bi bi-arrow-left-circle mx-2"></i>Volver
        </a>
    </form>

</div>


<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 my-2">
            Nombre
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.NombreMaquina)
        </dd>
        <dt class="col-sm-2 my-2">
            Descripción
        </dt>
        <dd class="col-sm-10 my-2">
            @Html.DisplayFor(model => model.DescripcionMaquina)
        </dd>
        <dt class="col-sm-2 my-2">
            Imagen
        </dt>
        <dd class="col-sm-6 my-2">
            <img src="@Model.ImagenMaquina" class="img-fluid img-thumbnail" style="max-width:350px;" />
        </dd>
    </dl>

    
</div>
    }
    else
    {
        <div class="d-flex flex-column justify-content-center align-items-center vh-100">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-emoji-frown-fill fs-1 mx-2"></i>
                <h1 class="m-0">Acceso denegado</h1>
            </div>

            <a class="btn btn-secondary text-white" style="border-radius: 14px;" asp-action="Index">
                <i class="bi bi-arrow-left-circle mx-2"></i> Volver
            </a>
        </div>

    }

}