@model Smart_Gym.Models.Clase

@{
    ViewData["Title"] = "Details";
}



<div>
    
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="mt-5" style="font-size: 25px">Información de la clase</h1>
     
        <a asp-action="Index" class="btn btn-secondary" style="border-radius: 14px;">
            <i class="bi bi-arrow-left-circle mx-2"></i>Volver</a>
      
    </div>
     
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Fecha y hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaHora)
        </dd>
        <dt class = "col-sm-2">
            Ubicación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gimnasio.Nombre)
        </dd>
    </dl>
</div>

