@using Microsoft.AspNetCore.Identity
@model Smart_Gym.Models.Clase
@inject SignInManager<Usuario> SignInManager

@{
    ViewData["Title"] = "Delete";
 var rolesPermitidos = new[] { "Administrador", "Entrenador" }; //Crea un arreglo con los roles permitidos para editar y eliminar rutinas.
    var tieneRol = rolesPermitidos.Any(rol => User.IsInRole(rol)); //Verifica si el usuario tiene alguno de los roles permitidos.
}
@if (SignInManager.IsSignedIn(User)) //Esta opción solo se muestra si el usuario está logueado
{
    if (tieneRol)
    {

 <h1 class="mt-5" style="font-size: 25px">Eliminar clase</h1>
        <div class="d-flex justify-content-between mt-5">

            <h4 style="font-size: 20px">Descripción de la clase</h4>

            <form asp-action="Delete"
                  onsubmit="return confirm('Eliminar clase\n\n- Esta acción no se puede deshacer.\n- Al borrar las clases afectarás las reservas relacionadas.\n\n¿Estás seguro de que quieres eliminar esta clase?');">
                <input type="hidden" asp-for="IdClase" />
                <input type="submit" value="Eliminar clase" class="btn btn-danger" style="border-radius: 14px;" />

                <a class="btn btn-secondary text-white" style="border-radius: 14px;" asp-action="Index">
                <i class="bi bi-arrow-left-circle mx-2"></i> Volver
                </a>
            </form>
        </div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        
        <dt class = "col-sm-2">
            Fecha y hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaHora)
        </dd>
        <dt class = "col-sm-2">
           Ubicación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gimnasio.Nombre)
        </dd>
    </dl>
    
    

    }
    else
    {
        <div class="d-flex flex-column justify-content-center align-items-center vh-100">
            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-emoji-frown-fill fs-1 mx-2"></i>
                <h1 class="m-0">Acceso denegado</h1>
            </div>

            <a class="btn btn-secondary text-white" style="border-radius: 14px;" asp-action="Index">
                <i class="bi bi-arrow-left-circle mx-2"></i> Volver
            </a>
        </div>

    }
}