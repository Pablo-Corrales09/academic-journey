@model ExamenPabloCorrales.Models.Tarea

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center mt-3" style=" height: 80vh;">
    <div class="col-10 row border border-secondary p-3 w-35 mt-3" style="border-radius:14px;">

        <h1 class="text-center my-5" style="font-size: clamp(16px, 4vw, 25px);">Eliminar tarea</h1>
        <hr />
    <dl class="row">

        <dt class = "col-sm-2">
           Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MetaPrincipal.Titulo)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>

         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grado)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TiempoEstimado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TiempoEstimado)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaLimite)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaLimite)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>       
    </dl>
        @* Se modifica la opción de volver, para que regrese a la vista Details de la meta a la que pertenece la tarea. *@
        <form asp-action="Delete" class="d-flex justify-content-between my-3">
        <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" style="border-radius:14px;" />        
            <a asp-controller="Metas" asp-action="Details" asp-route-id="@Model.MetaPrincipalId"
               class="btn btn-secondary" style="border-radius:14px;">
                <i class="bi bi-arrow-left-circle me-2"></i>Volver
            </a>
    </form>
</div>
</div>  
